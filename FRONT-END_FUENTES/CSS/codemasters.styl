gris_oscuro=#444
azul=#22BCE0
naranja=#DD4F24
gris_texto=#7a7a7a

@font-face {
	font-family: 'iconitos';
	src:url('../FONTS/icomoon.eot?o42rbx');
	src:url('../FONTS/icomoon.eot?#iefixo42rbx') format('embedded-opentype'),
		url('../FONTS/icomoon.woff?o42rbx') format('woff'),
		url('../FONTS/icomoon.ttf?o42rbx') format('truetype'),
		url('../FONTS/icomoon.svg?o42rbx#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

body
	background #E8E8E8
	color gris_oscuro
	font-family Arial
	font-size 16px

a
	color naranja

footer
	background naranja
	color rgba(white, 0.5)
	text-align center
	width 100%
	padding 1.5em 0em

	h3
		font-size 14px
		font-weight normal

		strong
			display block

		.mejor
			&:before
			&:after
				content " - "

header
	background gris_oscuro
	color white
	overflow hidden
	padding 0.5em
	position relative
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	z-index 1

	.logo
		border-right 1px solid azul
		width 60px
		float left
		img
			width 52px

	.titular
		margin 0 60px 0 70px
		.titulo
			font-size 2.1em
			font-weight normal
			margin 0
			padding 0

	.usuario
		position absolute
		right 10px
		top 10px

		.avatar
			margin 0 1em 0 0
			position relative
			z-index 2
			img
				border-radius 50%
				width 50px

		.flechita
			background naranja
			color white 
			display block
			padding 3px
			position absolute
			right 0
			top 12%
			text-align right
			text-decoration none
			width 2em

			&:after
				content "\e602"
				font-family "iconitos"


nav
	background azul
	border-left 15px solid white
	position relative

	&:before
		border-bottom 24px solid transparent
		border-left 19px solid white
		border-top 24px solid transparent
		content ""
		position absolute
		top 0
		left 0

	.menu
		height 48px
		line-height 47px
		margin 0
		padding 0
		overflow-x auto
		overflow-y hidden
		white-space nowrap
			
		li
			display inline-block

			a
				//border 1px solid black
				color white
				display inline-block
				margin 0 0.5em
				padding 0 0.5em 0 1em
				text-decoration none

			a:hover
				background white
				color azul
				padding-bottom 0.5em

.posts
	padding 0.5em

	.post
		background white
		color gris_texto
		box-shadow 2px 2px 10px rgba(black, 0.5)
		border-radius 0 0 0.5em 0.5em
		margin-bottom 1em

		.acciones
			border-top 3px solid azul
			padding 0.5em
			overflow hidden

			.datos
				float right

				.comentarios
					background gris_texto
					border-radius 3px
					color white
					margin 0 1em 0 0
					padding 2px 5px
					text-decoration none

				.estrellita
					text-decoration none

					&:before
						font-family "iconitos"
						font-size 1.5em
						content "\e602"
						color yellow
						text-shadow 0 0 1px black

			.votos
				float left

				.down
				.up
					font-size 1.5em
					text-decoration none

				.down
					color red
					&:before
						font-family "iconitos"
						content "\e601"

				.up
					color green
					&:before
						font-family "iconitos"
						content "\e600"


		.descripcion
			color gris_texto

			.detalles
				height 160px
				margin-left 130px

				.autor
					margin 0.5em 0 2em 0

				.fecha
					float right
					margin 0 1em 0 0

				.tag 
					background azul
					border-radius 0.5em
					color white
					padding 0.2em 0.5em
					text-decoration none

				.titulo
					color gris_oscuro
					font-size 18px
					font-style italic
					margin 0
					padding 0.5em 0.5em 0 0

			.imagen
				float left
				margin 0

				img
					height 160px
					vertical-align top
					width 120px

@media screen and (min-width: 768px)

	body
	
	.posts
		.post
			display inline-block
			width 48%
			vertical-align top
			&:nth-child(odd)
				margin-right 2%
